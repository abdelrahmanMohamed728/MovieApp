<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/dark_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_100</item>
        <item name="colorSecondaryVariant">@color/green_100</item>
        <item name="colorOnSecondary">@color/dark_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="MovieDate" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="SettingsItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="MovieOverview" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunitosans_semibold</item>
    </style>

    <style name="TopBarTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>